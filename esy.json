{
  "name": "melange-project",
  "dependencies": {
    "ocaml": "4.12.x",
    "@opam/reason": "3.7.0",
    "melange": "melange-re/melange#0.1.0",
    "@opam/cmdliner": "1.1.0",
    "@opam/ocaml-lsp-server": "*"
  },
  "esy": {
    "buildsInSource": "unsafe",
    "build": [
      "ln -sfn #{melange.install} node_modules/bs-platform",
      "mel build"
    ]
  },
  "installConfig": {
    "pnp": false
  }
}
